

package main

import "fmt"

func main() {
	a, b, c, d := 10, 12, 7, 5
	fmt.Printf("The number %v in binary is %b and the number %v in hexadecimal is %x \n", a, a, a, a)
	fmt.Printf("The number %v in binary is %b and the number %v in hexadecimal is %x \n", b, b, b, b)
	fmt.Printf("The number %v in binary is %b and the number %v in hexadecimal is %x \n", c, c, c, c)
	fmt.Printf("The number %v in binary is %b and the number %v in hexadecimal is %x \n", d, d, d, d)
	//To find this, go to fmt package doc and search binary or hexadecimal
}
